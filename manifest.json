{
"manifest_version": 2,
    "name": "Snake People",
    "description": "Replacing millenials with Snake People",
    "version": "1.0",

    "browser_action": {
        "default_icon": "time.png",
        "default_popup": "popup.html"
     },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage"
    ]
}